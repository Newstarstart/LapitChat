<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/appointment_single_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@mipmap/default_avatar" />

    <TextView
        android:id="@+id/appointment_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/appointment_single_image"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/appointment_single_image"
        android:text="Usuer name"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/appointment_single_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/appointment_single_name"
        android:layout_below="@+id/appointment_single_name"
        android:layout_marginTop="10dp"
        android:text="appointmant date" />

    <ImageView
        android:id="@+id/appointmet_single_online_icon"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/appointment_single_image"
        android:layout_toEndOf="@+id/appointment_single_image"
        android:src="@mipmap/green_sphere"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/appointmet_single_seen_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/appointment_single_name"
        android:layout_toEndOf="@+id/appointment_single_date"
        android:src="@mipmap/ic_done_black_24dp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/appointmet_single_received_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/appointment_single_date"
        android:layout_marginEnd="34dp"
        android:src="@mipmap/ic_call_received_black_24dp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/appointmet_single_send_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignStart="@+id/appointmet_single_received_icon"
        android:layout_alignTop="@+id/appointment_single_name"
        android:src="@mipmap/ic_call_made_black_24dp"
        android:visibility="invisible" />

</RelativeLayout>